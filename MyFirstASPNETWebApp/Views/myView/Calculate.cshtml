@model CalculateModel;

<h2>Calculate Grade:</h2>
<form method="post">
    <label>Assignments:</label>
    <input id="pctA" asp-for="pctA" type="number" /> <br />
    <label>Group Project:</label>
    <input id="pctGP" asp-for="pctGP" type="number" /> <br />
    <label>Quizzes:</label>
    <input id="pctQ" asp-for="pctQ" type="number" /> <br />
    <label>Midterm Exam:</label>
    <input id="pctME" asp-for="pctME" type="number" /> <br />
    <label>Final Exam:</label>
    <input id="pctFE" asp-for="pctFE" type="number" /> <br />
    <label>INTEX:</label>
    <input id="pctI" asp-for="pctI" type="number" /> <br />
    <input id="btnSend" type="submit" value="Calculate" />

    <div asp-validation-summary="All"></div>
</form>
<br />
<p id="FG">Final Grade: </p>
<p id="LG">Letter Grade: </p>


<script src="js/Calculation.js"></script>
